<div class="login" >

  <h1>Log in</h1>

  <%= form_tag '/login' do %>
  <ul>
    <li> Email:    <%= text_field_tag :email %>                     </li>
    <li> Password: <%= password_field_tag :password %>              </li>
    <li> Confirm:  <%= password_field_tag :password_confirmation %> </li>
    <%= submit_tag "Log In" %>
  <ul>

  <% end %>

</div>

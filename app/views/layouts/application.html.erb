<!DOCTYPE html>
<html>
<head>
  <title>NeedARuby</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="nav-bar" style="text-align: center; padding-bottom: 20px;">
    <div style="display: inline;">
        <% if current_user %>
      <div class="logged-in">
          Signed in as <%= current_user.name %> | <%= link_to "logout", "/logout" %> | <%= link_to "New Cheerup!", "/cheerups/new" %>
      </div>
        <% else %>

      <div class="logged-out">
          <%= link_to "Login", "/login" %>  <%= link_to "Sign up", "/users/new" %>
      </div>
          <% end %>
    </div>
  </div>

  <%= yield %>

</body>
</html>

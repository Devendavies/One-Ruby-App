<div class="new_task">

  <h2> Create A New Task </h2>

  <%= form_for @task, url: '/tasks' do |f| %>
    <ul>
      <li> Priority: <%= f.select :priority, [['Want', 'want'], ['Need', 'need']] %> </li>
      <li> Task:     <%= f.text_field :content  %> </li>
      <li>           <%= f.submit     "Create Task"  %> </li>
    </ul>
  <% end %>

</div>
